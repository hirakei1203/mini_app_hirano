
<div class="contents row">
  <div class="container">
    <%= form_with(model: @log, url:"/logs" ,local: true) do |form| %>
    
    <h4 class="page_title">Share today's job!</h4>
    <div class="row">
     <div class="col s6 offset-s3">
      <div class="card #ef9a9a red lighten-3">
        <div class="card-content white-text">
          <span class="card-title"><%= form.text_field :date, placeholder: "日付" %></span>
          <span class="card-title "><%= form.text_field :title, placeholder: "タイトル" %></span>
          <p><%= form.text_area :logs, placeholder: "業務内容" %></p>
          <span class="card-title"><%= form.text_area :problem, placeholder: "現在の具体的な課題" , rows: "10" %></span>
        </div>
      </div>
     </div>
    </div>
    <div class="submit">
    <%= form.submit "報告する" %>
    </div>
    <% end %>
  </div>
</div>